{
    "name": "php/tls-craft",
    "description": "A PHP library for testing and controlling TLS protocol behavior",
    "type": "library",
    "license": "PHP-3.01",
    "keywords": ["tls", "ssl", "protocol", "testing", "debugging"],
    "authors": [
        {
            "name": "Jakub Zelenka"
        }
    ],
    "require": {
        "php": "^8.5",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "friendsofphp/php-cs-fixer": "^3.87"
    },
    "autoload": {
        "psr-4": {
            "Php\\TlsCraft\\": "src/TlsCraft/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Php\\TlsCraft\\Tests\\Integration\\": "tests/Integration/",
          "Php\\TlsCraft\\Tests\\Unit\\": "tests/Unit/"
        }
    },
    "scripts": {
        "cs:fix": "php-cs-fixer fix --ansi",
        "cs:check": "php-cs-fixer fix --dry-run --diff --ansi"
    }
}
